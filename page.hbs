{{!< default}}
{{#page}}
<div class="split-content-wrapper">
	<div class="main-content-area">
		<article class="post-container">
		{{> "components/breadcrumb-nav"}}
			{{#if feature_image}}
			<header class="post-hero-header">
				{{! Background Image }}
				<div class="post-hero-image">
					<img
					  srcset="{{img_url feature_image size='s' format='webp'}} 400w,
							  {{img_url feature_image size='m' format='webp'}} 800w,
							  {{img_url feature_image size='l' format='webp'}} 1200w,
							  {{img_url feature_image size='xl' format='webp'}} 2000w"
					  sizes="(max-width: 600px) 100vw,
							 (max-width: 1000px) 90vw,
							 1200px"
					  src="{{img_url feature_image size='xl' format='webp'}}"
					  alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
					  width="1200"
					  height="675"
					  loading="eager" decoding="async">
				</div>

				{{! NEW: Top Meta Bar }}
				<div class="post-hero-top-meta">

					{{#primary_author}}
					  <a href="{{url}}" class="author-link">
						<img
						  srcset="{{img_url profile_image size='xxs' format='webp'}} 50w,
								  {{img_url profile_image size='xs' format='webp'}} 150w"
						  sizes="50px"
						  src="{{img_url profile_image size='xxs' format='webp'}}"
						  alt="{{name}}"
						  width="50"
						  height="50"
						  loading="lazy"
						  class="author-avatar-top">
					  </a>
					{{/primary_author}}

					<time datetime="{{date published_at format="YYYY-MM-DD"}}">
						{{date published_at timeago="true"}}
					</time>
				</div>

				<div class="post-hero-content">
					<h1 class="post-hero-title">{{title}}</h1>

				</div>
			</header>
			{{! Caption if exists }}
			{{#if feature_image_caption}}
			<div class="post-hero-caption">
				{{feature_image_caption}}
			</div>
			{{/if}}
			{{else}}
			{{! REGULAR HEADER - When there's no featured image }}
			<header class="post-header">
				<h1 class="post-title">{{title}}</h1>
				<div class="post-meta">
					<img
					  srcset="{{img_url primary_author.profile_image size='xxs' format='webp'}} 50w,
							  {{img_url primary_author.profile_image size='xs' format='webp'}} 150w"
					  sizes="50px"
					  src="{{img_url primary_author.profile_image size='xxs' format='webp'}}"
					  alt="{{primary_author.name}}"
					  width="50"
					  height="50"
					  loading="lazy"
					  class="author-avatar">
					<div class="post-date">
						<p>by <a class="author-name" href="{{primary_author.url}}" class="author-name">{{primary_author.name}}</a></p>
						<time datetime="{{date published_at format="YYYY-MM-DD"}}">
							{{date published_at format="MMM D YYYY, h:mm A z"}}
						</time>
					</div>
				</div>
			</header>
			{{/if}}
			<div class="post-content">
				{{content}}
			</div>
		</article>
	</div>
	<aside class="content-aside">
		{{> "layout/aside-content"}}
	</aside>
</div>
{{/page}}
<p class="end-credits" data-site-title="{{@site.title}}"></p>