{{!< default}}
{{#post}}
<div class="split-content-wrapper">
	<div class="main-content-area">
		<article class="post-container">
	{{> "components/breadcrumb-nav"}}
			{{#if feature_image}}
			<header class="post-hero-header">
				{{! Background Image }}
				<div class="post-hero-image">
					<img src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
				</div>

				{{! NEW: Top Meta Bar }}
				<div class="post-hero-top-meta">
					<img src="{{img_url primary_author.profile_image size="s"}}" alt="{{primary_author.name}}" class="author-avatar-top">
					<time datetime="{{date published_at format="YYYY-MM-DD"}}">
						{{date published_at timeago="true"}}
					</time>
				</div>

				<div class="post-hero-content">
					<h1 class="post-hero-title">{{title}}</h1>
					{{#if custom_excerpt}}
						<p class="excerpt">{{custom_excerpt}}</p>
					{{/if}}
				</div>

				{{! Caption if exists }}
				{{#if feature_image_caption}}
				<div class="post-hero-caption">
					{{feature_image_caption}}
				</div>
				{{/if}}
			</header>
			{{else}}
			{{! REGULAR HEADER - When there's no featured image }}
			<header class="post-header">
				<h1 class="post-title">{{title}}</h1>
				<div class="post-meta">
					<img src="{{img_url primary_author.profile_image size="s"}}" alt="{{primary_author.name}}" class="author-avatar">
					<div class="post-date">
						<a class="author-name" href="{{primary_author.url}}" class="author-name">{{primary_author.name}}</a>
						<time datetime="{{date published_at format="YYYY-MM-DD"}}">
							{{date published_at format="MMMM DD, YYYY"}}
						</time>
					</div>
				</div>
			</header>
			{{/if}}

			<div class="post-content">
				{{content}}
			</div>

			{{! Rest of your post.hbs stays the same... }}
			<footer class="post-footer">
				<div class="share-dropdown footer-share-hidden">
					<button class="share-dropbtn" aria-label="Share this article" style="display: none;">{{> "icons/ellipsis"}}</button>
					<div class="share-dropdown-content">
						<p class="title">Share and Support</p>
						<p class="thanks">Thanks for dropping by. Use the links below to share this article and/or support this site.</p>
						<a href="#" class="native-share" style="display: none;">{{> "icons/share"}} Share via Device</a>
						<a href="#" class="copy-url">{{> "icons/link"}} Copy Article URL</a>
						<a href="#" class="email-share">{{> "icons/at-sign"}} Email Article</a>
						<a href="#" class="mastodon-share">{{> "icons/mastodon"}} Share on Mastodon</a>
						<a href="https://bsky.app/intent/compose?text={{encode title}}{{encode (url absolute="true")}}" target="_blank" rel="noopener noreferrer">{{> "icons/bluesky"}} Share on Bluesky</a>
						<a href="https://www.reddit.com/submit?url={{encode (url absolute="true")}}&title={{encode title}}" target="_blank" rel="noopener noreferrer">{{> "icons/reddit"}} Share on Reddit</a>
						<a href="whatsapp://send?text={{encode (concat title ' ' (url absolute="true"))}}" class="whatsapp-share" target="_blank" rel="noopener noreferrer">{{> "icons/whatsapp"}} Share on WhatsApp</a>
						<a href="#/portal/support">{{> "icons/thumb-up"}} Get Our Newsletter</a>
						<a href="/memberships">{{> "icons/thumb-up"}} Subscribe</a>
						<a href="#/portal/support">{{> "icons/beer"}} Buy Us a Pint</a>
						<a href="/contact">{{> "icons/mail"}} Contact Us</a>
					</div>
				</div>
				<p>
					<a href="#" class="trigger-share-footer">You can share this post</a> if you'd like. Members can leave a comment below. Anyone can use our contact page to <a href="/contact">reach out to us</a> via the various channels we offer. {{#match updated at}}This post was updated on <time class="updated" datetime="{{updated_at}}">{{date updated_at format="M/D/Y"}}</time>. <a href="/corrections-policy/">Check out our corrections policy</a> if you're curious about such things. Cheers!{{/match}}
				</p>
			</footer>
		</article>

		{{! Related Posts }}
		{{#get "posts" include="authors,tags" filter="tag:{{primary_tag.slug}}+id:-{{id}}" limit="10" as |related_posts|}}
		{{#if related_posts}}
		<section class="related-posts">
			<h3 class="related-title">Further Reading</h3>
			<div class="related-grid">
				{{#foreach related_posts}}
				<article class="related-card">
					{{#if feature_image}}
					<a href="{{url}}" class="related-image">
						<img src="{{img_url feature_image size="m"}}" alt="{{title}}">
					</a>
					{{/if}}
					<div class="related-content">
						<h4><a href="{{url}}">{{title}}</a></h4>
						<div class="related-meta">
							{{#if primary_tag}}
									<a href="{{primary_tag.url}}">{{primary_tag.name}}</a>
							{{/if}}
							<time datetime="{{date published_at format="YYYY-MM-DD"}}">
								{{date published_at format="MMMM Do, YYYY"}}
							</time>
						</div>
					</div>
				</article>
				{{/foreach}}
			</div>
		</section>
		{{/if}}
		{{/get}}

		{{! Comments }}
		{{#if comments}}
		<section class="comments-section">
			<h3>Comments</h3>
			<div id="comments">
				{{comments}}
			</div>
		</section>
		{{/if}}
	</div>

	<aside class="content-aside">
		{{> "layout/aside-content"}}
	</aside>
</div>
{{/post}}