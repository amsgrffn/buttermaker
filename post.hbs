{{!< default}}
{{#post}}
<div class="split-content-wrapper">
	<div class="main-content-area">
	{{> "components/breadcrumb-nav"}}
		<article class="post-container">
<div class="post-inner">
			{{#if feature_image}}
			<header class="post-hero-header">
				{{! Background Image }}
				<div class="post-hero-image">
					<img
					  srcset="{{img_url feature_image size='s' format='webp'}} 400w,
							  {{img_url feature_image size='m' format='webp'}} 800w,
							  {{img_url feature_image size='l' format='webp'}} 1200w,
							  {{img_url feature_image size='xl' format='webp'}} 2000w"
					  sizes="(max-width: 600px) 100vw,
							 (max-width: 1000px) 90vw,
							 1200px"
					  src="{{img_url feature_image size='xl' format='webp'}}"
					  alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
					  width="1200"
					  height="675"
					  loading="eager" decoding="async">
				</div>

				{{! NEW: Top Meta Bar }}
				<div class="post-hero-top-meta">

					{{#primary_author}}
					  <a href="{{url}}" class="author-link">
						<img
						  srcset="{{img_url profile_image size='xxs' format='webp'}} 50w,
								  {{img_url profile_image size='xs' format='webp'}} 150w"
						  sizes="50px"
						  src="{{img_url profile_image size='xxs' format='webp'}}"
						  alt="{{name}}"
						  width="50"
						  height="50"
						  loading="lazy"
						  class="author-avatar-top">
					  </a>
					{{/primary_author}}

					<time datetime="{{date published_at format="YYYY-MM-DD"}}">
						{{date published_at timeago="true"}}
					</time>
				</div>

				<div class="post-hero-content">
					<h1 class="post-hero-title">{{title}}</h1>

				</div>

				{{! Caption if exists }}
				{{#if feature_image_caption}}
				<div class="post-hero-caption">
					{{feature_image_caption}}
				</div>
				{{/if}}
			</header>
			{{else}}
			{{! REGULAR HEADER - When there's no featured image }}
			<header class="post-header">
				<h1 class="post-title">{{title}}</h1>
				<div class="post-meta">
					<img
					  srcset="{{img_url primary_author.profile_image size='xxs' format='webp'}} 50w,
							  {{img_url primary_author.profile_image size='xs' format='webp'}} 150w"
					  sizes="50px"
					  src="{{img_url primary_author.profile_image size='xxs' format='webp'}}"
					  alt="{{primary_author.name}}"
					  width="50"
					  height="50"
					  loading="lazy"
					  class="author-avatar">
					<div class="post-date">
						<a class="author-name" href="{{primary_author.url}}" class="author-name">{{primary_author.name}}</a>
						<time datetime="{{date published_at format="YYYY-MM-DD"}}">
							{{date published_at format="MMMM DD, YYYY"}}
						</time>
					</div>
				</div>
			</header>
			{{/if}}
			<div class="post-content">
				{{content}}
			</div>
			<div class="share-links">
			<p>Share and Subscribe</p>
			<div class="icon-row">
			{{> "icons/link"}}
			{{> "icons/at-sign"}}
			{{> "icons/bluesky"}}
			{{> "icons/mastodon"}}
			{{> "icons/reddit"}}
			{{> "icons/whatsapp"}}
			{{> "icons/thumb-up"}}
			{{> "icons/beer"}}
			</div>
			</div>

			{{! Rest of your post.hbs stays the same... }}
			<footer class="post-footer">
			<p>
				<a href="{{primary_author.url}}">{{primary_author.name}}</a> published this post on {{date published_at format="MMMM DD, YYYY"}}. <a href="/">You can share this post</a> if you'd like. Members can leave a comment below. Anyone can use our contact page to <a href="/contact">reach out to us</a> via the various channels we offer. {{#match updated at}}This post was updated on <time class="updated" datetime="{{updated_at}}">{{date updated_at format="M/D/Y"}}</time>. <a href="/corrections-policy/">Check out our corrections policy</a> if you're curious about such things. Cheers!{{/match}}
			</p>
			</footer>
		</div>
		</article>

		{{! Related Posts }}
		{{#get "posts" include="authors,tags" filter="tag:{{primary_tag.slug}}+id:-{{id}}" limit="10" as |related_posts|}}
		{{#if related_posts}}
		<section class="related-posts">
			<h3 class="related-title">Further Reading</h3>
			<div class="related-grid">
				{{#foreach related_posts}}
				<article class="related-card">
					{{#if feature_image}}
					<a href="{{url}}" class="related-image">
						<img
						  srcset="{{img_url feature_image size='s' format='webp'}} 400w,
								  {{img_url feature_image size='m' format='webp'}} 800w"
						  sizes="(max-width: 768px) 100vw,
								 300px"
						  src="{{img_url feature_image size='s' format='webp'}}"
						  alt="{{title}}"
						  width="400"
						  height="300"
						  loading="lazy">
					</a>
					{{/if}}
					<div class="related-content">
						<h4><a href="{{url}}">{{title}}</a></h4>
						<div class="related-meta">
							{{#if primary_tag}}
									<a href="{{primary_tag.url}}">{{primary_tag.name}}</a>
							{{/if}}
							<time datetime="{{date published_at format="YYYY-MM-DD"}}">
								{{date published_at format="MMMM Do, YYYY"}}
							</time>
						</div>
					</div>
				</article>
				{{/foreach}}
			</div>
		</section>
		{{/if}}
		{{/get}}

		{{! Comments }}
		{{#if comments}}
		<section class="comments-section">
			<h3>Comments</h3>
			<div id="comments">
				{{comments}}
			</div>
		</section>
		{{/if}}
	</div>

	<aside class="content-aside">
		{{> "layout/aside-content"}}
	</aside>
</div>
{{/post}}
<p class="end-credits" data-site-title="{{@site.title}}"></p>