							{{#if feature_image_caption}}
								<figcaption>{{feature_image_caption}}</figcaption>
							{{/if}}
							{{/if}}

					</div>
				</div>
			</article>
			{{/foreach}}
		</section>

		{{#if pagination.next}}
		<div class="load-more">
			<button id="load-more-btn" type="button" aria-label="Load more posts">
