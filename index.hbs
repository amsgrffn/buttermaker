{{!< default}}
{{! Horizontal Scroll Section - Add this right after your category tabs }}
<section class="horizontal-scroll-section">
	<div class="horizontal-scroll-header">
		<h2 class="horizontal-scroll-title">Trending Now</h2>
		<div class="horizontal-scroll-controls">
			<button class="scroll-btn scroll-btn-prev" aria-label="Scroll left">‚Üê</button>
			<button class="scroll-btn scroll-btn-next" aria-label="Scroll right">‚Üí</button>
		</div>
	</div>

	<div class="horizontal-scroll-container">
		<div class="horizontal-scroll-track">
			{{#get "posts" filter="featured:true" limit="8" as |featured_posts|}}
				{{#if featured_posts}}
					{{#foreach featured_posts}}
					<a href="{{url}}" class="scroll-card" aria-label="Read {{title}}">
						{{#if feature_image}}
						<div class="scroll-card-image">
							<img
								src="{{img_url feature_image size="m"}}"
								alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
								loading="lazy"
							>
						</div>
						{{/if}}

						<div class="scroll-card-content">
							<h3 class="scroll-card-title">{{title}}</h3>

							<div class="scroll-card-meta">
								<div class="scroll-card-author">
									<img
										src="{{img_url primary_author.profile_image size="xs"}}"
										alt="{{primary_author.name}}"
										class="scroll-card-avatar"
									>
									<span>{{primary_author.name}}</span>
								</div>
								<span>‚Ä¢</span>
								<time datetime="{{date published_at format="YYYY-MM-DD"}}">
									{{date published_at format="DD MMM"}}
								</time>
							</div>

							<!--<p class="scroll-card-excerpt">{{excerpt words="20"}}</p>-->

							{{#if tags}}
							<div class="scroll-card-tags">
								{{#foreach tags limit="2"}}
								<span class="scroll-card-tag">{{name}}</span>
								{{/foreach}}
							</div>
							{{/if}}
						</div>
					</a>
					{{/foreach}}
				{{else}}
					{{! Fallback: show recent posts if no featured posts }}
					{{#foreach posts limit="8"}}
					<a href="{{url}}" class="scroll-card" aria-label="Read {{title}}">
						{{#if feature_image}}
						<div class="scroll-card-image">
							<img
								src="{{img_url feature_image size="m"}}"
								alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
								loading="lazy"
							>
							{{#if reading_time}}
							<div class="scroll-card-badge">{{reading_time}}</div>
							{{/if}}
						</div>
						{{/if}}

						<div class="scroll-card-content">
							<h3 class="scroll-card-title">{{title}}</h3>

							<div class="scroll-card-meta">
								<div class="scroll-card-author">
									<img
										src="{{img_url primary_author.profile_image size="xs"}}"
										alt="{{primary_author.name}}"
										class="scroll-card-avatar"
									>
									<span>{{primary_author.name}}</span>
								</div>
								<span>‚Ä¢</span>
								<time datetime="{{date published_at format="YYYY-MM-DD"}}">
									{{date published_at format="DD MMM"}}
								</time>
							</div>

							<p class="scroll-card-excerpt">{{excerpt words="20"}}</p>

							{{#if tags}}
							<div class="scroll-card-tags">
								{{#foreach tags limit="2"}}
								<span class="scroll-card-tag">{{name}}</span>
								{{/foreach}}
							</div>
							{{/if}}
						</div>
					</a>
					{{/foreach}}
				{{/if}}
			{{/get}}
		</div>
	</div>
</section>
{{! Category Tabs }}
<section class="category-tabs-section">
	<div class="category-tabs-container">
		<button class="category-tab active" data-filter="all">All</button>
		<button class="category-tab" data-filter="notes">Notes</button>
		<button class="category-tab" data-filter="bookmarks">Bookmarks</button>
		<button class="category-tab" data-filter="fiction">Fiction</button>
		<button class="category-tab" data-filter="cartoon">Poetry</button>
		<button class="category-tab" data-filter="essay">Articles</button>
		<button class="category-tab" data-filter="journal">Sports</button>
		<button class="category-tab" data-filter="journal">Newsletters</button>
		<button class="category-tab" data-filter="journal">Podcasts</button>
	</div>
</section>

{{! Featured Masonry Section }}
<section class="featured-masonry-section">
	<h2 class="section-title">Featured Creative Works on poop junk</h2>
	<div class="masonry-grid">
		{{#foreach posts limit="12"}}
		<article class="masonry-card {{#has tag="poetry,poem"}}tall{{/has}}{{#has tag="cartoon,drawing,art"}}wide{{/has}}{{#has tag="short-story,fiction"}}large{{/has}}" data-tags="{{tags separator=" "}}">
			{{#if feature_image}}
			<div class="masonry-image">
				<img src="{{img_url feature_image size="m"}}" alt="{{title}}" loading="lazy">
				{{#has tag="cartoon,drawing,art,illustration"}}
				<div class="content-type-badge">üé®</div>
				{{/has}}
				{{#has tag="poetry,poem"}}
				<div class="content-type-badge">‚úçÔ∏è</div>
				{{/has}}
				{{#has tag="story,fiction,short-story"}}
				<div class="content-type-badge">üìñ</div>
				{{/has}}
				{{#has tag="essay,opinion,thoughts"}}
				<div class="content-type-badge">üí≠</div>
				{{/has}}
			</div>
			{{/if}}

			<div class="masonry-content">
				<h3 class="masonry-title">
					<a href="{{url}}">{{title}}</a>
				</h3>
				{{#unless feature_image}}
				<div class="masonry-excerpt">{{excerpt words="25"}}</div>
				{{/unless}}
				<div class="masonry-meta">
					<time class="masonry-date" datetime="{{date published_at format="YYYY-MM-DD"}}">
						{{date published_at format="DD MMM YYYY"}}
					</time>
					{{#if primary_tag}}
					<span class="masonry-tag">{{primary_tag.name}}</span>
					{{/if}}
					{{#if reading_time}}
					<span class="masonry-reading-time">{{reading_time}}</span>
					{{/if}}
				</div>
			</div>

			<a href="{{url}}" class="masonry-link" aria-label="Read {{title}}"></a>
		</article>
		{{/foreach}}
	</div>
</section>

{{! CTA Banner }}
<section class="cta-banner">
	<div class="cta-content">
		<h2 class="cta-title">{{@site.title}}</h2>
		<p class="cta-description">{{@site.description}}</p>
		<div class="cta-buttons">
			{{#unless @member}}
			<a href="#/portal/signup" class="cta-btn primary" data-portal="signup">Subscribe for free</a>
			<a href="{{@site.url}}/about/" class="cta-btn secondary">Learn more</a>
			{{else}}
			<a href="#/portal/account" class="cta-btn primary" data-portal="account">Manage subscription</a>
			<a href="{{@site.url}}/archive/" class="cta-btn secondary">Browse archive</a>
			{{/unless}}
		</div>
	</div>
</section>

{{! Regular Post Feed }}
<section class="post-feed">
	<h2 class="section-title">Latest Posts</h2>
	{{#foreach posts offset="12"}}
	<article class="post-card">
		<div class="post-header">
			<img src="{{img_url primary_author.profile_image size="s"}}" alt="{{primary_author.name}}" class="author-avatar">
			<div class="author-info">
				<a href="{{primary_author.url}}" class="author-name">{{primary_author.name}}</a>
				<div class="post-meta">
					<time datetime="{{date published_at format="YYYY-MM-DD"}}">
						{{date published_at timeago="true"}}
					</time>
					{{#if reading_time}}
					‚Ä¢ {{reading_time}}
					{{/if}}
				</div>
			</div>
			{{#unless @member}}
			<a href="#/portal/signup" class="subscribe-btn-small" data-portal="signup">Subscribe</a>
			{{/unless}}
		</div>

		<div class="post-content">
			<h2 class="post-title">
				<a href="{{url}}">{{title}}</a>
			</h2>
			<p class="post-excerpt">{{excerpt words="50"}}</p>
		</div>

		{{#if feature_image}}
		<div class="post-media">
			<a href="{{url}}">
				<img src="{{img_url feature_image size="l"}}" alt="{{title}}" class="post-image">
			</a>
		</div>
		{{/if}}

		<div class="post-actions">
			<span class="post-action" data-action="like">üëç Like</span>
			<a href="{{url}}#comments" class="post-action">üí¨ Comment</a>
			<span class="post-action" data-action="share">üîó Share</span>
			<span class="post-action" data-action="save">‚≠ê Save</span>
		</div>
	</article>
	{{/foreach}}
</section>

