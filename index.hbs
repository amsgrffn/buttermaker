{{!< default}}

{{! Horizontal Scroll Section - Trending Now (Full Width) }}
<section class="horizontal-scroll-section">
	<div class="horizontal-scroll-header">
		<h2 class="horizontal-scroll-title">Trending <em>&amp;</em> Popular Posts</h2>
	</div>

	<div class="horizontal-scroll-container">
		<button class="scroll-btn scroll-btn-prev" aria-label="Scroll left"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-left-icon lucide-chevron-left"><path d="m15 18-6-6 6-6"/></svg></button>
		<button class="scroll-btn scroll-btn-next" aria-label="Scroll right"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right-icon lucide-chevron-right"><path d="m9 18 6-6-6-6"/></svg></button>
		<div class="horizontal-scroll-track">

			{{#get "posts" filter="featured:true" limit="8" as |featured_posts|}}
				{{#if featured_posts}}
					{{#foreach featured_posts}}
					<a href="{{url}}" class="scroll-card" aria-label="Read {{title}}">
						{{#if feature_image}}
						<div class="scroll-card-image">
							<img
								src="{{img_url feature_image size="m"}}"
								alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
								loading="lazy"
							>
						</div>
						{{/if}}

						<div class="scroll-card-content">
							<h3 class="scroll-card-title">{{title}}</h3>

							<div class="scroll-card-meta">
								<div class="scroll-card-author">
									<img
										src="{{img_url primary_author.profile_image size="xs"}}"
										alt="{{primary_author.name}}"
										class="scroll-card-avatar"
									>
									<span>{{primary_author.name}}</span>
								</div>
								<span>•</span>
								<time datetime="{{date published_at format="YYYY-MM-DD"}}">
									{{date published_at format="DD MMM"}}
								</time>
							</div>

							{{#if tags}}
							<div class="scroll-card-tags">
								{{#foreach tags limit="2"}}
								<span class="scroll-card-tag">{{name}}</span>
								{{/foreach}}
							</div>
							{{/if}}
						</div>
					</a>
					{{/foreach}}
				{{else}}
					{{! Fallback when no featured posts }}
					<div class="scroll-card-placeholder">
						<p>No trending posts available</p>
					</div>
				{{/if}}
			{{/get}}
		</div>
	</div>
</section>

{{! NEW: Split Content Layout - 2/3 Main + 1/3 Aside }}
<div class="split-content-wrapper">
	{{! Main Content Area (2/3 width) }}
