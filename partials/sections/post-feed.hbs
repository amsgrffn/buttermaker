<section class='post-feed'>
  <h2 class='section-title'>The Latest Articles</h2>
  {{#get 'posts' include='authors,tags' filter='tag:-[hash-note]' limit='10'}}
    {{#foreach posts}}
      <article class='post-card'>
        <a href='{{url}}' class='post-card-link'>
          {{#if feature_image}}
            <div class='post-card-image'>
              <img
                srcset='{{img_url feature_image size='s' format='webp'}} 400w,
                      {{img_url feature_image size='m' format='webp'}} 800w,
                      {{img_url feature_image size='l' format='webp'}} 1200w'
                sizes='(max-width: 768px) 100vw,
                     50vw'
                src='{{img_url feature_image size='m' format='webp'}}'
                alt='{{title}}'
                width='800'
                height='600'
                loading='lazy'
              />
            </div>
          {{else}}
            <div class='post-card-image'>
              <img
                src='{{asset "img/maine.webp"}}'
                alt='{{title}}'
                loading='lazy'
              />
            </div>
          {{/if}}

          {{! Meta moved OUTSIDE and positioned at TOP }}
          <div class='post-card-meta'>
            <div class='post-card-author'>
              <img
                srcset='{{img_url
                  primary_author.profile_image
                  size='xxs'
                  format='webp'
                }} 50w,
                      {{img_url
                  primary_author.profile_image
                  size='xs'
                  format='webp'
                }} 150w'
                sizes='50px'
                src='{{img_url
                  primary_author.profile_image
                  size='xxs'
                  format='webp'
                }}'
                alt='{{primary_author.name}}'
                width='50'
                height='50'
                loading='lazy'
                class='post-card-avatar'
              />
            </div>
            <time datetime='{{date published_at format='YYYY-MM-DD'}}'>
              {{date published_at timeago='true'}}
            </time>
          </div>

          {{! Content container with just tag, title, and excerpt }}
          <div class='post-card-content'>
            <p class='post-topic'><span>{{primary_tag.name}}</span></p>
            <h2 class='post-card-title'>{{title}}</h2>
          </div>
        </a>
      </article>
    {{/foreach}}
  {{/get}}
  <p class='go-to-blog'><span>{{> "icons/arrow-box"}}
      You can see all our posts at
      <a href='/blog'>the Blog</a>
      or check out all our topics.</span></p>
</section>