<section class="article-loop">
<div class="blog-feed-header">
  <h4>The Blog</h4>
  <p>Everything we've published in a chronological stream</p>
</div>
{{#foreach posts}}
<div class="post-container" data-post-id="{{id}}">
<article class="post-card--with-image">

{{#has tag="notes"}}
  {{> "sections/note-card"}}
{{else}}

  <!-- PREVIEW VERSION (for long posts) -->
  <div class="post-preview" style="display: none;">
    <div class="post-body-flex">

      <!-- META SIDEBAR - Now comes first -->
      <div class="post-meta-sidebar">
        <img src="{{img_url primary_author.profile_image size="s"}}" alt="{{primary_author.name}}" class="author-avatar">
        <time class="post-date" datetime="{{date published_at format="YYYY-MM-DD"}}">
          {{date published_at timeago="true"}}
        </time>
      </div>

      <!-- CONTENT - Now comes second -->
      <div class="post-content-flex">
        <h2 class="post-title">
          <a href="{{url}}">{{title}}</a>
        </h2>

        {{#if custom_excerpt}}
          <p class="post-excerpt">{{custom_excerpt}}</p>
        {{else}}
          <p class="post-excerpt">{{excerpt words="50"}}</p>
        {{/if}}

        <div class="post-tags">
          <span class="post-topic">{{tags limit="3"}}</span>
        </div>

        <a href="{{url}}" class="read-more-btn">Read full post â†’</a>
      </div>

      <div class="post-media-flex">
        {{#if feature_image}}
          <img src="{{img_url feature_image size="m"}}" alt="{{title}}" class="post-image">
        {{else}}
          <img src="{{asset "img/collage2.jpg"}}" alt="{{title}}" class="post-image post-image-fallback">
        {{/if}}
      </div>
    </div>
  </div>

  <!-- FULL VERSION (for short posts) - SHOWS BY DEFAULT -->
  <div class="post-full">
    <div class="post-body-flex">

      <!-- META SIDEBAR - Now comes first -->
      <div class="post-meta-sidebar">
        <img src="{{img_url primary_author.profile_image size="s"}}" alt="{{primary_author.name}}" class="author-avatar">
        <time class="post-date" datetime="{{date published_at format="YYYY-MM-DD"}}">
          {{date published_at timeago="true"}}
        </time>
      </div>

      <!-- CONTENT - Now comes second -->
      <div class="post-content-flex">
        <h2 class="post-title">
          <a href="{{url}}">{{title}}</a>
        </h2>

        <div class="post-content">
          {{content}}
        </div>

        <div class="post-tags">
          <span class="post-topic">{{tags limit="3"}}</span>
        </div>
      </div>
    </div>
  </div>

{{/has}}

</article>
</div>
{{/foreach}}
</section>

<p>more posts here!</p>