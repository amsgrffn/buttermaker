<ul class="breadcrumb-list">
<li class="breadcrumb-item home">{{> "icons/map-pin"}} <a class="title" href="{{@site.url}}">Home</a></li>
  <li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
  <li class="breadcrumb-item">The Blog</li>
</ul>
<section class="article-loop">
{{#foreach posts}}
<div class="post-container" data-post-id="{{id}}">
<article class="post-card--with-image">

{{#has tag="notes"}}
  {{> "sections/note-card"}}
{{else}}

  {{! PREVIEW VERSION (for long posts) }}
  <div class="post-preview" style="display: none;">
    <div class="post-body-flex">

      {{! Left: Author Avatar Sidebar }}
      <div class="post-meta-sidebar">
        <img src="{{img_url primary_author.profile_image size="s"}}" alt="{{primary_author.name}}" class="author-avatar">
      </div>

      {{! Right: Preview Card }}
      <div class="post-preview-card">
        {{! Featured Image with Overlay }}
        {{#if feature_image}}
          <div class="post-preview-image">
            <a href="{{url}}">
              <img src="{{img_url feature_image size="m"}}" alt="{{title}}">
            </a>
            <div class="post-preview-overlay">
            <span class="post-topic-overlay">{{primary_tag.name}}</span>
              <time datetime="{{date published_at format="YYYY-MM-DD"}}">
                {{date published_at timeago="true"}}
              </time>
            </div>
          </div>
        {{else}}
          <div class="post-preview-image">
            <a href="{{url}}">
              <img src="{{asset "img/maine.webp"}}" alt="{{title}}" class="post-image-fallback">
            </a>
            <div class="post-preview-overlay">
            <span class="post-topic-overlay">{{primary_tag.name}}</span>
              <time datetime="{{date published_at format="YYYY-MM-DD"}}">
                {{date published_at timeago="true"}}
              </time>
            </div>
          </div>
        {{/if}}

        {{! Content Below Image }}
        <div class="post-preview-content">
          <h2 class="post-title">
            <a href="{{url}}">{{title}}</a>
          </h2>

          {{#if custom_excerpt}}
            <p class="post-excerpt">{{custom_excerpt}}</p>
          {{else}}
            <p class="post-excerpt">{{excerpt words="50"}}</p>
          {{/if}}

          <a href="{{url}}" class="read-more-btn">
            Read full post
            <svg class="read-more-arrow" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div> {{! ADD THIS CLOSING TAG! }}

  {{! FULL VERSION (for short posts) }}
  <div class="post-full">
    <div class="post-body-flex">

      {{! META SIDEBAR }}
      <div class="post-meta-sidebar">
        <a href="{{primary_author.url}}" class="author-link">
            <img src="{{img_url primary_author.profile_image size="s"}}" alt="{{primary_author.name}}" class="author-avatar">
        </a>
      </div>

      {{! CONTENT }}
      <div class="post-content-flex">
      <div class='post-tags'>
        <span class='post-topic'>{{#primary_tag}}<a
              href='{{url}}'
            >{{name}}</a>{{/primary_tag}}</span>
        <span class='post-item'>
          <time
            class='post-date'
            datetime='{{date published_at format='YYYY-MM-DD'}}'
          >
            {{date published_at timeago='true'}}
          </time>
        </span>
      </div>
        <h2 class="post-title">
          <a href="{{url}}">{{title}}</a>
        </h2>

        <div class="post-content">
          {{content}}
        </div>

      <div class="post-footer-tags">
        <span class="tags-list">{{tags limit="3" from="2" separator=""}}</span>
        {{> "components/share-dropdown"}}
      </div>
      </div>
    </div>
  </div>

{{/has}}

</article>
</div>
{{/foreach}}
</section>

<p>more posts here!</p>