{{! -- Horizontal Scroll Section - Trending Now -- }}
<section class="horizontal-scroll-section">
	<div class="horizontal-scroll-header">
		<h2 class="horizontal-scroll-title">We {{>icons/heart}} These Posts. YMMV.</h2>
	</div>
	<div class="horizontal-scroll-container">
		<button class="scroll-btn scroll-btn-prev" aria-label="Scroll left">{{> "icons/chevron-left"}}</button>
		<button class="scroll-btn scroll-btn-next" aria-label="Scroll right">{{> "icons/chevron-right"}}</button>
		<div class="horizontal-scroll-track">
			{{#get "posts" include="authors,tags" filter="featured:true" limit="10" as |featured_posts|}}
				{{#if featured_posts}}
					{{#foreach featured_posts}}
						<a href="{{url}}" class="scroll-card" aria-label="Read {{title}}">
							{{#if feature_image}}
								<div class="scroll-card-image">
									<img
									  srcset="{{img_url feature_image size='s' format='webp'}} 400w,
											  {{img_url feature_image size='m' format='webp'}} 800w"
									  sizes="300px"
									  src="{{img_url feature_image size='s' format='webp'}}"
									  alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
									  width="400"
									  height="300"
									  loading="eager" decoding="async">
								</div>
							{{/if}}

							{{! Meta info moved OUTSIDE and positioned at TOP }}
							<div class="scroll-card-meta">
								<div class="scroll-card-author">
									<img
									  srcset="{{img_url primary_author.profile_image size='xxs' format='webp'}} 50w,
											  {{img_url primary_author.profile_image size='xs' format='webp'}} 150w"
									  sizes="50px"
									  src="{{img_url primary_author.profile_image size='xxs' format='webp'}}"
									  alt="{{primary_author.name}}"
									  width="50"
									  height="50"
									  loading="eager" decoding="async"
									  class="scroll-card-avatar">
								</div>
								<time datetime='{{date published_at format='YYYY-MM-DD'}}'>
									{{date published_at timeago='true'}}
								  </time>
							</div>
							{{! Content container with just title and tag }}
							<div class="scroll-card-content">
								<p class="post-topic"><span>{{primary_tag.name}}</span></p>
								<h3 class="scroll-card-title">{{title}}</h3>
							</div>
						</a>
					{{/foreach}}
				{{else}}
					{{! Fallback when no featured posts }}
					<div class="scroll-card-placeholder">
						<p>No trending posts available</p>
					</div>
				{{/if}}
			{{/get}}
		</div>
	</div>
</section>