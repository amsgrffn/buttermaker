<ul class="breadcrumb-list">
	<li class="breadcrumb-item home">
		{{> "icons/map-pin"}} <a class="title" href="{{@site.url}}">Home</a>
	</li>
	{{#is "index"}}
		<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
		<li class="breadcrumb-item">Blog</li>
		<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
		<li class="breadcrumb-item current" aria-current="page">You Are Here {{> "icons/map-pin"}}</li>
	{{/is}}
	{{!-- FOR PAGES --}}
	{{#is "page"}}
	<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
	<li class="breadcrumb-item pages-dropdown">
		<a href="javascript:void(0)" class="dropdown-trigger">Pages</a>
		<div class="breadcrumb-dropdown">
			<div class="dropdown-inner">
				{{#get "pages" limit="all" order="title asc"}}
						<ul>
							{{#foreach pages}}
								<li><a href="{{url}}">
										{{> "icons/file"}}
									{{title}}
								</a></li>
							{{/foreach}}
						</ul>
					{{else}}
						<p>No other pages found</p>
				{{/get}}
			</div>
		</div>
	</li>
	<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
	<li class="breadcrumb-item current" aria-current="page">You Are Here <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pin-icon lucide-map-pin"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"/><circle cx="12" cy="10" r="3"/></svg></li>
	{{/is}}
	{{#is "post"}}
	<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
	<li class="breadcrumb-item pages-dropdown">
		<a href="javascript:void(0)" class="dropdown-trigger">Topics</a>
		<div class="breadcrumb-dropdown">
			<div class="dropdown-inner">
				{{#get "tags" limit="17" include="count.posts" order="count.posts desc"}}
					<ul>
						{{#foreach tags}}
							<li><a href="{{url}}">{{> "icons/folder"}} {{name}} <span>({{count.posts}})</span></a></li>
						{{/foreach}}
						<li><a href="/topics">{{> "icons/arrow-forward"}} View All Topics</a></li>
					</ul>
					{{else}}
						<p>No other pages found</p>
				{{/get}}
			</div>
		</div>
	</li>
	<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
	{{#if primary_tag}}
		<li class="breadcrumb-item">
			<a href="{{primary_tag.url}}">{{primary_tag.name}}</a>
		</li>
		<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
	{{/if}}

	<li class="breadcrumb-item current">{{title}}</li>
	{{/is}}
</ul>