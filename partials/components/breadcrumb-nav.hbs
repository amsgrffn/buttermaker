<ul class="breadcrumb-list">
	<li class="breadcrumb-item home">
		{{> "icons/arrow-down-right"}}<a class="title" href="{{@site.url}}">Home</a>
	</li>
	{{!-- FOR PAGES --}}
	{{#is "page"}}
	<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
	<li class="breadcrumb-item pages-dropdown">
		<a href="javascript:void(0)" class="dropdown-trigger">Pages</a>
		<div class="breadcrumb-dropdown">
			<div class="dropdown-inner">
				{{#get "pages" limit="all" order="title asc"}}
						<ul>
							{{#foreach pages}}
								<li><a href="{{url}}">
										{{> "icons/file"}}
									{{title}}
								</a></li>
							{{/foreach}}
						</ul>
					{{else}}
						<p>No other pages found</p>
				{{/get}}
			</div>
		</div>
	</li>
	<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
	<li class="breadcrumb-item current" aria-current="page">You Are Here {{> "icons/map-pin"}}</li>
	{{/is}}
	{{#is "post"}}
	<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
	<li class="breadcrumb-item pages-dropdown">
		<a href="javascript:void(0)" class="dropdown-trigger">Topics</a>
		<div class="breadcrumb-dropdown">
			<div class="dropdown-inner">
				{{#get "tags" limit="17" include="count.posts" order="count.posts desc"}}
					<ul>
						{{#foreach tags}}
							<li><a href="{{url}}">{{> "icons/folder"}} {{name}} <span>({{count.posts}})</span></a></li>
						{{/foreach}}
						<li><a href="/topics">{{> "icons/arrow-forward"}} View All Topics</a></li>
					</ul>
					{{else}}
						<p>No other pages found</p>
				{{/get}}
			</div>
		</div>
	</li>
	<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
	{{#if primary_tag}}
		<li class="breadcrumb-item">
			<a href="{{primary_tag.url}}">{{primary_tag.name}}</a>
		</li>
		<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
	{{/if}}
	<li class="breadcrumb-item current">{{date published_at format="dddd, MMMM Do, YYYY"}}</li>
	<li class="breadcrumb-separator">{{> "icons/chevron"}}</li>
	<li class="breadcrumb-item current" aria-current="page">You Are Here {{> "icons/map-pin"}}</li>
	{{/is}}
</ul>