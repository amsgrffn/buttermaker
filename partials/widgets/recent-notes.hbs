<div class="notes-widget">
	<h3 class="widget-title">Latest Notes</h3>
	{{#get "posts" include="authors,tags" filter="tag:[hash-note]" limit="12"}}
		{{#foreach posts}}
			<div class="notes-content">
				<div class="note-item">
					<h4 class="note-title"><a href="{{url}}">{{title}}</a></h4>
					<div class="note-body">
						{{content}}
					</div>
					<div class="note-meta">
						<div class="img-date">
							<img src="{{img_url primary_author.profile_image size="s"}}" alt="{{primary_author.name}}" class="author-avatar">
							&middot;
							<time datetime="{{date published_at format="YYYY-MM-DD"}}">
								<a href="{{url}}" aria-label="Read post from {{date published_at format="MMMM Do, YYYY"}}">
									{{date published_at timeago="true"}}
								</a>
							</time>
						</div>
						{{> "components/share-dropdown"}}
					</div>
				</div>
			</div>
		{{/foreach}}
	{{/get}}
	<p class="small-link">there's more, <a href="/notes">check them out</a> at the note archive {{> "icons/arrow-right"}}</p>
</div>